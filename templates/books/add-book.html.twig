{% extends 'index.html.twig' %}

{% block content %}
    <div class="content-page">
        <!-- ============================================================== -->
        <!-- Start Content here -->
        <!-- ============================================================== -->
        <div class="content">
            <div class="col-sm-6 portlets ui-sortable">
                <div class="widget">
                    <div class="widget-header transparent">
                        <h2>Add <strong>Book</strong></h2>
                        <div class="additional-btn">
                            <a href="#" class="hidden reload"><i class="icon-ccw-1"></i></a>
                            <a href="#" class="widget-toggle"><i class="icon-down-open-2"></i></a>
                            <a href="#" class="widget-close"><i class="icon-cancel-3"></i></a>
                        </div>
                    </div>
                    <div class="widget-content padding">
                        <div id="basic-form">
                            {{ form_start(form, {'attr': {'role': 'form'}}) }}
                            {{ form_errors(form) }}
                                <div class="form-group">
                                    {{ form_row(form.author, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(form.title, {'attr': {'class': 'form-control', 'id': 'book-title', 'placeholder': 'Enter book title'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(form.release_date, {'attr': {'class': 'form-control datepicker-input', 'id': 'book-release-date', 'placeholder': 'Enter release date'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(form.isbn, {'attr': {'class': 'form-control', 'id': 'book-isbn', 'placeholder': 'Enter book isbn'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(form.format, {'attr': {'class': 'form-control', 'id': 'book-format', 'placeholder': 'Enter book format'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(form.number_of_pages, {'attr': {'class': 'form-control', 'id': 'book-number-of-pages', 'placeholder': 'Enter number of pages'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(form.description, {'attr': {'class': 'form-control', 'id': 'book-description', 'placeholder': 'Enter description'}}) }}
                                </div>
                                {{ form_row(form.submit, {'attr': {'class': 'btn btn-default', 'type': 'submit'}}) }}
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End content here -->
        <!-- ============================================================== -->

    </div>
{% endblock %}